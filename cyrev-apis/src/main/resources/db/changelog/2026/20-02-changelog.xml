<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1771614514134-1" author="apata">
        <createTable tableName="organization_owners">
            <column name="organization_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organization_owners"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organization_owners"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1771614514134-2" author="apata">
        <createTable tableName="organizations">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organizations"/>
            </column>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT"/>
            <column name="deleted" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1771614514134-3" author="apata">
        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT"/>
            <column name="deleted" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="secret" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="organization_id" type="UUID"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
            <column name="email_verified" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="mfa_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1771614514134-4" author="apata">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1771614514134-5" author="apata">
        <addForeignKeyConstraint baseColumnNames="organization_id" baseTableName="users"
                                 constraintName="FK_USERS_ON_ORGANIZATION" referencedColumnNames="id"
                                 referencedTableName="organizations"/>
    </changeSet>
    <changeSet id="1771614514134-6" author="apata">
        <addForeignKeyConstraint baseColumnNames="organization_id" baseTableName="organization_owners"
                                 constraintName="fk_orgown_on_organization" referencedColumnNames="id"
                                 referencedTableName="organizations"/>
    </changeSet>
    <changeSet id="1771614514134-7" author="apata">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="organization_owners"
                                 constraintName="fk_orgown_on_user" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>